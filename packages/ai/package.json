{
  "name": "@tui-kit-ai/ai",
  "version": "1.0.0",
  "description": "AI Components for Terminal User Interfaces - A comprehensive suite of AI-powered components for blessed-based terminal applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "example": "ts-node examples/dashboard.ts",
    "example:stream": "ts-node examples/stream-example.ts",
    "example:codeblock": "ts-node examples/codeblock-example.ts",
    "example:tokeninfo": "ts-node examples/tokeninfo-example.ts",
    "example:modelselector": "ts-node examples/modelselector-example.ts",
    "example:websearch": "ts-node examples/websearch-example.ts",
    "example:pdftool": "ts-node examples/pdftool-example.ts",
    "example:imageai": "ts-node examples/imageai-example.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts examples/**/*.ts",
    "docs": "typedoc src/index.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "tui",
    "terminal",
    "ui",
    "blessed",
    "ai",
    "artificial-intelligence",
    "streaming",
    "code-block",
    "syntax-highlighting",
    "token-tracking",
    "model-selection",
    "web-search",
    "pdf-processing",
    "image-generation",
    "image-analysis",
    "cli",
    "command-line",
    "terminal-interface"
  ],
  "author": "TUI Kit AI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nikomatt69/tui-kit-ai.git",
    "directory": "packages/ai"
  },
  "bugs": {
    "url": "https://github.com/nikomatt69/tui-kit-ai/issues"
  },
  "homepage": "https://github.com/nikomatt69/tui-kit-ai#readme",
  "dependencies": {
    "blessed": "^0.1.81",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@tui-kit-ai/core": "^1.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}