{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ]
}